<% if !logged_in? %>

	<div class="center hero-unit">
		<center>
	    <h1>Welcome!</h1>
	    <hr>
	    <p> 
	    	<%= link_to 'Sign Up',  new_user_url , class: "btn btn-large btn-success" %> 
	    </p>
	  </center>
	</div>

<% else %>

	<div class="center hero-unit">
		<center>
	    <h1>Welcome back, <%= current_user.email %>!</h1>
	    <hr>
	    <p> 
	    	<%= link_to 'View Some Bands',  bands_url , class: "btn btn-large" %> 
	    </p>
	  </center>
	</div>

<% end %>